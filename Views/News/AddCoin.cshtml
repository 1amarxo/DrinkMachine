@model Coins
@{ ViewData["Title"] = "AddCoin"; }

<div class="card">
    <div class="card-header">
        <h3>Create new Coin</h3>
    </div>
    <div class="card-body">
        <form asp-controller="News" asp-action="AddCoin" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Value" class="form-label"></label>
                <input asp-for="Value" class="form-control" min="0">
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" min="0">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="ImageFile" class="form-label"></label>
                <input id="ImageFile" name="ImageFile" type="file" class="form-control">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input id="IsValue" name="IsValue" type="checkbox">
                    </div>
                    <label for="IsValue" class="form-label">Block</label>
                </div>

            </div>

            <div class="row ml-1">
                <button type="submit" class="btn btn-primary col-1">Add</button>
                <a asp-action="Index" asp-controller="News" class="btn btn-secondary col-1 ml-2">Back</a>
            </div>
        </form>
    </div>
</div>
