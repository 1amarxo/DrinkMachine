@model Coins
@{ ViewData["Title"] = "Edit"; }

<div class="card">
    <div class="card-header">
        <h3>Edit News</h3>
    </div>
    <div class="card-body">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <form asp-controller="News" asp-action="EditCoin" method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden class="form-control">
            <input asp-for="ImageUrl" hidden class="form-control">
            <input asp-for="IsValue" hidden class="form-control">
            <div class="mb-3">
                <label asp-for="Value" class="form-label"></label>
                <input asp-for="Value" class="form-control" min="0">
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" min="0">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            @if (Model.ImageUrl != null && Model.ImageUrl != string.Empty)
            {
        <div class="mb-3">
            <img src="@Model.ImageUrl" />
        </div>}
            <div class="mb-3">
                <label for="ImageFile" class="form-label"></label>
                <input id="ImageFile" name="ImageFile" type="file" class="form-control">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text">
                        <input id="IsValue" name="IsValue" type="checkbox" checked="@Model.IsValue">
                    </div>
                    <label for="IsValue" class="form-label">Block</label>
                </div>

            </div>
            <div class="row ml-1">
                <button type="submit" class="btn btn-primary col-1">Edit</button>
                <a asp-action="Index" asp-controller="News" class="btn btn-secondary col-1 ml-2">Back</a>
            </div>
        </form>
    </div>
</div>


