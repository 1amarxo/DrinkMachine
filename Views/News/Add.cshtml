@model Drink
@{
    ViewData["Title"] = "Add";
}

<div class="card">
    <div class="card-header">
        <h3>Add New Drink</h3>
    </div>
    <div class="card-body">
        <form asp-controller="News" asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" min="0">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" min="0">
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="mb-3">
                @*<label asp-for="PosterUrl" class="form-label"></label>
            <input asp-for="PosterUrl" class="form-control">*@
                <label for="ImageFile" class="form-label"></label>
                <input id="ImageFile" name="ImageFile" type="file" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label"></label>
                <select class="form-select" asp-for="CategoryId" asp-items="@ViewBag.Categories">
                    @*@foreach(Category item in ViewBag.Categories)
                {
                    <option value="@item.Id">@item.Name</option>
                }*@
                </select>
            </div>
            
            <div class="row ml-1">
                <button type="submit" class="btn btn-primary col-1">Add</button>
                <a asp-action="Index" asp-controller="News" class="btn btn-secondary col-1 ml-2">Back</a>
            </div>
        </form>
    </div>
</div>
